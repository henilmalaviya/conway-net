# Copy this file to .env and edit the values as needed.

# Server port to listen on
PORT=8080

# Game tick speed in milliseconds
TICK_SPEED=250

# WebSocket endpoint (path)
WS_ENDPOINT=/game

# Disable WebSocket origin check (true/false)
WS_ORIGIN_CHECK=false

# Maximum observe region size (diagonal length)
MAX_OBSERVE_REGION_SIZE=1000

# Logging Configuration
# Available levels: trace, debug, info, warn, error, fatal
# Default: info
LOG_LEVEL=info

# Interval in seconds to save the game state to disk (0 to disable)
SAVE_INTERVAL=60

# Directory to save game state files
SAVE_DIR=./saves

# Maximum number of save files to keep (older files will be deleted)
MAX_SAVE_FILES=10